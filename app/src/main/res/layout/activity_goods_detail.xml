<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_goods_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/good_detail_bg"
    tools:context="cn.ucai.fulicenter.controller.activity.GoodsDetailActivity">
    <RelativeLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/main_orange">
    <include layout="@layout/commn_head_title"/>
        <ImageView
            android:id="@+id/ivGoodShare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@drawable/selector_share_bg"/>
        <ImageView
            android:id="@+id/ivGoodCollect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/bg_collect_in"
            android:padding="5dp"
            android:layout_toLeftOf="@id/ivGoodShare"/>
        <ImageView
            android:id="@+id/ivGoodCart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/ivGoodCollect"
            android:padding="5dp"
            android:src="@mipmap/bg_cart_selected"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:background="@color/good_detail_bg_white"
        >
        <TextView
            android:id="@+id/tvEN"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EnglishName"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvNa"
            android:layout_margin="5dp"
            android:layout_below="@id/tvEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goodsName"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvPrice"
            android:text="price"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/good_detail_currency_price"
            />
        <TextView
            android:id="@+id/tvPriceCurrent"
            android:layout_below="@id/tvPrice"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="CurrentPrice"
            android:textColor="@color/good_detail_currency_price"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_image"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
    <cn.ucai.fulicenter.view.SlideAutoLoopView
        android:id="@+id/salv"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/good_detail_bg_white"/>
    <cn.ucai.fulicenter.view.FlowIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:count="4"
        app:focus="0"
        app:focus_color="#e10808"
        app:normal_color="#0d8ad7"
        app:r="5dp"
        app:space="3dp"
        />
</LinearLayout>
    <WebView
        android:id="@+id/wv_good_brief"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/good_detail_bg_white">

    </WebView>
</LinearLayout>
