<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_categorychild_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.ucai.fulicenter.controller.activity.CategorychildDetailActivity">
    <RelativeLayout
        android:id="@+id/alertTitle"
        android:background="#e6de11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:onClick="Back"/>
     <cn.ucai.fulicenter.view.CatFilterButton
         android:id="@+id/cat_Filter"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:background="@null"
         android:text="分类"
         android:layout_centerVertical="true"
         android:layout_centerHorizontal="true"
         android:drawableRight="@drawable/arrow2_up"
         android:textColor="@color/white"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <Button
            android:id="@+id/sort_addtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按时间排序"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_order_down"
            android:paddingRight="5dp"
            />
        <Button
            android:id="@+id/sort_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="按价格排序"
            android:layout_weight="1"
            android:drawableRight="@drawable/arrow_order_down"
            android:paddingRight="5dp"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
